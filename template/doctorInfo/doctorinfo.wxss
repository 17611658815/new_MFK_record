/* 医生信息 */
.InfoBox{
  margin:auto;
  display: flex;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  align-items: center;
  border-bottom: 1rpx solid #e2e2e2;
}
.InfoBox>view:nth-child(1){
  width: 102rpx;
  height: 102rpx;
}
.InfoBox>view:nth-child(1) image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.InfoBox>view:nth-child(2){
  flex: 1;
  margin-left: 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1){
  font-size: 32rpx;
  color: #000000;
  padding-right: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2){
  font-size: 28rpx;
  color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1){
  font-size: 28rpx;
  color: #999999;
  padding-right: 20rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2){
  font-size: 28rpx;
 color: #999999;
}
.InfoBox>view:nth-child(2)>view:nth-child(3){
    font-size: 24rpx;
    color: #999999;
    margin-top: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(3) text{
    margin-right: 20rpx;
}