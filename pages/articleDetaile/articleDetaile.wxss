/* pages/article/article.wxss */
.page-body {
  display: flex;
  flex: 1;
  margin-bottom: 98rpx;
  flex-direction: column;
  background: #f8f8f8;
  border-top: 1rpx solid #e2e2e2;
}

/* 标题 */
.color{
  width: 100%;
  /* padding-top: 36rpx; */
  background: #ffffff;
  
}
.doctorInfo{
  background: #FFFFFF;
}
.videoMag{
  width: 100%;
  height: 424rpx;
}
.videoTitle{
  width: 92%;
  padding-top: 36rpx;
  padding-bottom: 50rpx;
  /* height: 150rpx; */
  margin: auto;
  border-bottom: 1rpx solid #e2e2e2;
}
.videoTitle>view:nth-child(1){
  font-size: 36rpx;
  color: #000000;
  margin-bottom: 10rpx;
}
.videoTitle>view:nth-child(2)>text{
  color: #999999;
  font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(1){
  margin-right: 5rpx;
  font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(2){
  margin-right: 5rpx;
   font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(3){
  margin-right: 30rpx;
   font-size: 26rpx;
}
/* 医生信息 */
.InfoBox{
  width: 92%;
  margin:auto;
  display: flex;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  align-items: center;
}
.InfoBox>view:nth-child(1){
  width: 90rpx;
  height: 90rpx;
}
.InfoBox>view:nth-child(1) image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.InfoBox>view:nth-child(2){
  flex: 1;
  margin-left: 38rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1){
  font-size: 32rpx;
  color: #333333;
  padding-right: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2){
  font-size: 28rpx;
  color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1){
  font-size: 28rpx;
  color: #666666;
  padding-right: 20rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2){
  font-size: 28rpx;
  color: #999999;
}

/* 文章样式 */
.msgList_article{
  flex: 1;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666666;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /* 显示的行数 */
  overflow: hidden;  /** 隐藏*/
}


/* 文章样式 */

.msgList_msg view:nth-child(1){
  width: 250rpx;
  height: 150rpx;
  position: relative;
}
.msgList_msg view:nth-child(2){
  flex: 1;
  height: 150rpx;
  margin-left: 28rpx;
  font-size: 28rpx;
  color: #666666;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 4; /* 显示的行数 */
  overflow: hidden;  /** 隐藏*/
}
.msgList_msg image{
  width: 250rpx;
  height: 150rpx;
}
.msgList_msg .times{
  width: 80rpx;
  height: 30rpx;
  border-radius: 44px;
  background: rgba(0,0,0,.2);
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color: #ffff;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.msgList_msg .Listplay{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 35%;
  top: 30%;
}
/* 音频 视频 问答 文章 各自样式 */
